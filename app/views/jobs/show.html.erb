<div class="content">
	<div class="job-container">
		<div class="row">
			
			<div class="job-highlight">
				
				<div class="job-logo">
					<%= image_tag @job.company.logo, height: 150, width: 150, crop: :fill %>
				</div>
				
				<div class="job-title">
					<h2> <%= @job.title %> </h2>
					<h3><%= @job.company.name %></h3>
					<p><%= @job.company.industry %></p>
				</div>
				
				<div class="job-infos">
					<ul>
						<div class=	"col-xs-12">
							<div class="job-infos-dates">
								<p>Dates </p>
								<li><%= @job.start_date%> - <%= @job.end_date %></li>
							</div>
						</div>
						<div class="col-xs-12">
							<div class="job-infos-salaire">
								<p>Salaire </p>
								<li><%= @job.monthly_salary %> euros/mois </li>
							</div>
						</div>
					</ul>
				</div>
			</div>
			<div class="job-details">
				<div class="job-description">
					<h3>Description de l'offre</h3>
					<%= @job.description %>
				</div>
				<div class="job-profile">
					<h3>Profil recherche</h3>
					<%= @job.profile %>
				</div>
			</div>
		</div>
	</div>
	<div class="form-container">
		<div class="application-form">
			<%= simple_form_for [@job, @job_request] do |f| %>
			<%= f.error_notification %>
			<%= f.input :message, placeholder: 'PrÃ©sentez-vous rapidement et expliquez au recruteur pourquoi vous etes le candidat ideal' %>
			<%= f.input :status, type="hidden", value="pending"%>
			<%= f.submit "Postuler", class: "btn btn-danger" %>
			<% end %>
			
		</div>
	</div>
</div>