<div class="card">
  <div class="card-main" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.4)), url( <%= image_path job.image.url(:standard) %>)">
    <div class="card-category"> <%= job.category %> </div>
    <div class="card-description">
      <h2> <%= job.title %> </h2>
      <p> <%= "#{job.start_date} du #{job.end_date}" %> </p>
    </div>
    <%= image_tag job.company.logo.url(:logo), class: "card-user"%>
  </div>

  <%= link_to "", job_path(job), class: "card-link" %>
</div>
